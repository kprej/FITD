$input v_color0

#include "bgfx_shader.sh"

highp USAMPLER2D(s_paletteTexture, 1);

void main()
{
    gl_FragColor.r = (texelFetch(s_paletteTexture, ivec2(0, v_color0* 3), 0) / 255.f).r;
    gl_FragColor.g = (texelFetch(s_paletteTexture, ivec2(1, v_color0* 3), 0) / 255.f).r;
    gl_FragColor.b = (texelFetch(s_paletteTexture, ivec2(2, v_color0* 3), 0) / 255.f).r;
    gl_FragColor.w = .1;
}
